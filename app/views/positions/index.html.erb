<% content_for :title, 'Positions' %>

<% content_for :page_actions do %>
  <%= render partial: "layouts/page_actions", locals: { page_actions: [{ name: 'Add Position', url: new_group_position_url(@group), highlight: true }]}  %>
<% end %>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <% if @group.positions.empty? %>
        <%= render partial: 'layouts/empty', locals: { content: "Your group does not have any positions!" } %>
      <% else %>
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-3 py-3 bg-gray-50"></th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Acronym
                </th>
                <th class="px-6 py-3 bg-gray-50"></th>
                <th class="px-6 py-3 bg-gray-50"></th>
              </tr>
            </thead>
            <tbody data-controller="sortable" data-sortable-resource-value="position" data-sortable-parameter-value="rank">
              <%= render partial: 'positions/position', collection: @group.positions, cached: true, locals: { group: @group } %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
