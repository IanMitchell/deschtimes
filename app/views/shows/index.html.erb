<% content_for :title, 'Shows' %>

<% content_for :page_actions do %>
  <%= render partial: "layouts/page_actions", locals: { page_actions: [{ name: 'Add Show', url: new_group_show_url(@group), highlight: true }]}  %>
<% end %>

<% if @group.projects.where(status: :pending).size > 0 %>
  <div class="rounded-md bg-blue-50 p-4 mt-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1 md:flex md:justify-between">
        <p class="text-sm leading-5 text-blue-700">
          You have <%= pluralize(@group.projects.where(status: :pending).size, "pending invitation") %> to work on a joint project!
        </p>
        <p class="mt-3 text-sm md:mt-0 md:ml-6">
          <%= link_to group_projects_url(@group), class: "whitespace-nowrap font-medium text-blue-700 hover:text-blue-600" do %>
            View Now <span aria-hidden="true">&rarr;</span></a>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<div class="mx-auto p-4 max-w-screen-xl sm:px-6 lg:p-8">
  <% if @group.shows.empty? %>
    <%= render partial: 'layouts/empty', locals: { content: "Your group does not have any shows!" } %>
  <% end %>

  <div class="space-y-12">
    <% if @airing.size > 0 %>
      <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl">Airing</h2>

      <ul class="space-y-12 lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8 lg:gap-y-12 lg:space-y-0">
        <%= render partial: 'shows/show', collection: @airing, cached: true %>
      </ul>
    <% end %>

    <% if @active.size > 0 %>
      <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl">Active</h2>

      <ul class="space-y-12 lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8 lg:gap-y-12 lg:space-y-0">
        <%= render partial: 'shows/show', collection: @active, cached: true %>
      </ul>
    <% end %>

    <% if @finished.size > 0 %>
      <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl">Finished</h2>

      <ul class="space-y-12 lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8 lg:gap-y-12 lg:space-y-0">
        <%= render partial: 'shows/show', collection: @finished, cached: true %>
      </ul>
    <% end %>
  </div>
</div>
